@model FileHub.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вхід до FileHub";
    Layout = null;
}
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .branding-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .form-section {
            background-color: #ffffff;
        }

        .form-control-lg {
            border-radius: 0.5rem;
            background-color: #f8f9fa;
            border: 1px solid #eee;
        }

            .form-control-lg:focus {
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(118, 75, 162, 0.1);
                border-color: #764ba2;
            }
    </style>
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-lg-6 d-none d-lg-flex flex-column justify-content-center align-items-center branding-section p-5">
                <div class="text-center">
                    <h1 class="display-3 fw-bold mb-3">FileHub 📂</h1>
                    <p class="lead">Ваші файли завжди під рукою. <br>Безпечно. Швидко. Надійно.</p>
                </div>
            </div>

            <div class="col-lg-6 col-12 d-flex align-items-center justify-content-center form-section">
                <div style="width: 100%; max-width: 450px; padding: 20px;">

                    <div class="mb-5">
                        <h2 class="fw-bold text-dark">З поверненням! 👋</h2>
                        <p class="text-muted">Будь ласка, введіть свої дані для входу.</p>
                    </div>

                    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label text-uppercase fs-6 text-muted fw-bold" style="font-size: 0.8rem;">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="name@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <label asp-for="Password" class="form-label text-uppercase fs-6 text-muted fw-bold" style="font-size: 0.8rem;">Пароль</label>
                            </div>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" type="password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-dark btn-lg py-3 fw-bold">Увійти</button>
                        </div>

                        <div class="text-center text-muted">
                            Ще не маєте акаунта?
                            <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none text-primary">Створити безкоштовно</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>