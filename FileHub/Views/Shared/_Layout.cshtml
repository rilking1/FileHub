<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Полоз Максим МІ-41</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FileHub.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #6366f1; /* Indigo */
            --primary-hover: #4f46e5;
            --bg-body: #f3f4f6;
            --text-main: #1f2937;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            /* Відступ зверху, бо меню фіксоване */
            padding-top: 80px;
            padding-bottom: 160px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Styling */
        .navbar-custom {
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            height: 70px;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 500;
            color: #4b5563 !important;
            transition: color 0.2s;
        }

            .nav-link:hover {
                color: var(--primary-color) !important;
            }

        /* User Dropdown */
        .user-dropdown-btn {
            background-color: white;
            border: 1px solid #e5e7eb;
            padding: 0.375rem 0.75rem;
            border-radius: 9999px; /* Pill shape */
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
            color: #374151;
            text-decoration: none;
        }

            .user-dropdown-btn:hover, .user-dropdown-btn[aria-expanded="true"] {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            }

        /* Buttons */
        .btn-auth-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            font-weight: 500;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            transition: all 0.2s;
        }

            .btn-auth-outline:hover {
                background-color: #f9fafb;
                border-color: #9ca3af;
            }

        .btn-auth-solid {
            background-color: var(--primary-color);
            color: white;
            border: none;
            font-weight: 500;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            transition: all 0.2s;
        }

            .btn-auth-solid:hover {
                background-color: var(--primary-hover);
                color: white;
                transform: translateY(-1px);
            }

        /* Footer */
        .footer {
            margin-top: auto;
            background-color: white;
            border-top: 1px solid #e5e7eb;
            padding: 1.5rem 0;
            font-size: 0.875rem;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-folder2-open me-2"></i>FileHub
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1 ms-3">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Приватність</a>
                        </li> *@
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a href="#" class="user-dropdown-btn dropdown-toggle" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; color: var(--primary-color);">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <span class="fw-medium small">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-3 mt-2" aria-labelledby="userMenu">
                                    <li><h6 class="dropdown-header text-uppercase small text-muted">Обліковий запис</h6></li>

                                    @if (User.IsInRole("admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index", "Roles")">
                                                <i class="bi bi-shield-lock me-2 text-warning"></i> Адмін панель
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Вихід
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn-auth-outline text-decoration-none" asp-controller="Account" asp-action="Login">Вхід</a>
                            <a class="btn-auth-solid text-decoration-none" asp-controller="Account" asp-action="Register">Реєстрація</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 animate-fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-center">
            <div class="mb-1">
                &copy; 2025 <strong>FileHub</strong> — Полоз Максим МІ-41
            </div>
            <div class="small">
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted me-2">Privacy Policy</a>
                &middot;
                <a href="#" class="text-decoration-none text-muted ms-2">Terms</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>